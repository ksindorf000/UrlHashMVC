@model Sonnetly.Models.Favorites

@{
    ViewBag.Title = "Favorites";
}

<h2>Favorites</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @if (User.Identity.Name == Model.Owner.UserName)
            {
                <div class="panel-heading">
                    <h1 class="title">
                        Favorited &nbsp; Sonnets
                    </h1>
                </div>
                <div class="panel-default panel-scroll">
                    @foreach (var fav in ViewBag.favsList)
                    {
                        <div class="panel-heading">
                            <h4>
                                <a href="/Sonnet/@fav.Bookmark.NewUrl">@fav.Bookmark.NewUrl</a>
                                <span class="badge">@fav.Bookmark.NumClicks</span>
                            </h4>
                            <p>@Html.ActionLink("Details", "Detail", "Bookmark", new { id = @fav.Bookmark.Id }, null)</p>
                            @using (Html.BeginForm("Favorites", "Bookmark", new { id = @fav.Id, command = "Remove" }))
                            {
                                <input type="submit" class="btn btn-default" value="Remove from Favorites" command="Remove" />
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
